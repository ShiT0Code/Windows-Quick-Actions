<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="TouchHelper.Settings.SideBar.EditActionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TouchHelper.Settings.SideBar"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid RowSpacing="18" HorizontalAlignment="Left" ColumnSpacing="14" Loaded="Grid_Loaded">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <TextBox Header="显示名称" LostFocus="Display_TextBox_LostFocus" x:Name="displayBox"/>
        <RadioButtons Header="执行操作" Grid.Row="1" x:Name="selectBtns">
            <RadioButton Content="打开桌面应用/打开文件/打开链接/运行命令" Click="Option0_RadioButton_Click"/>
            <RadioButton Content="打开文件夹" Click="Option1_RadioButton_Click"/>
            <RadioButton Content="打开 AppX 应用" Click="Option2_RadioButton_Click"/>
        </RadioButtons>
        <TextBox Header="命令行"
                 x:Name="commandBox"
                 LostFocus="CommandBox_LostFocus"
                 Visibility="Collapsed"
                 Grid.Row="2"/>
        <Button Grid.Row="2" Grid.Column="1"
                x:Name="browserBtn" Click="Browser_Click"
                Content="浏览"
                Visibility="Collapsed"
                VerticalAlignment="Bottom"/>

        <Grid x:Name="appView" Visibility="Collapsed" Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Content="选择应用" Click="SelectApp_Button_Click"/>
            <Image Grid.Row="1" Grid.RowSpan="2"
                   Width="64" Height="64"
                   Stretch="None"
                   x:Name="appIcon"/>
            <TextBlock x:Name="appName" Grid.Row="1" Grid.Column="1" VerticalAlignment="Bottom"/>
            <TextBlock x:Name="appPublisher" Grid.Row="2" Grid.Column="1"/>
        </Grid>
        <Button Content="返回" Grid.Row="3" Click="Back_Button_Click"/>
    </Grid>
</Page>
