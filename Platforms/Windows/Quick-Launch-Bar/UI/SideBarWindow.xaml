<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Quick_Launch_Bar.UI.SideBarWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Quick_Launch_Bar.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Loaded="Grid_Loaded">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6"/>
            <ColumnDefinition Width="124" x:Name="ChangeCol"/>
            <ColumnDefinition Width="6"/>
        </Grid.ColumnDefinitions>
        <Rectangle x:Name="NButton"
                   Fill="DarkGray"
                   PointerPressed="NButton_PointerPressed"
                   Width="6"
                   Height="90"
                   VerticalAlignment="Center"
                   SizeChanged="ShapeButton_SizeChanged"
                   RadiusX="3"
                   RadiusY="3"
                   Opacity="0.4">
            <FlyoutBase.AttachedFlyout>
                <Flyout Closed="Flyout_Closed" x:Name="flyout">
                    <Flyout.SystemBackdrop>
                        <MicaBackdrop Kind="BaseAlt"/>
                    </Flyout.SystemBackdrop>
                    <Grid Height="450" Width="340" RowSpacing="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="侧边栏"
                                   Padding="8"
                                   FontSize="16"/>

                        <StackPanel Orientation="Horizontal"
                                    Grid.Column="1">
                            <AppBarButton Click="Settings_Button_Click"
                                             ToolTipService.ToolTip="打开 应用设置"
                                          Icon="Setting"
                                          Height="48"
                                          Width="48"/>

                            <AppBarButton
                                    ToolTipService.ToolTip="更多"
                                    Click="MoreHyperlinkButton_Click"
                                Icon="More"
                                Width="48"
                                Height="48">
                                <FlyoutBase.AttachedFlyout>
                                    <MenuFlyout>
                                        <MenuFlyoutItem Text="退出应用" Click="Exit_Button_Click"/>
                                    </MenuFlyout>
                                </FlyoutBase.AttachedFlyout>
                            </AppBarButton>

                            <AppBarButton Width="48"
                                          Height="48"
                                             Click="Button_Click_3"
                                             ToolTipService.ToolTip="关闭侧边栏">
                                <FontIcon Glyph="&#xE711;"/>
                            </AppBarButton>
                        </StackPanel>

                        <TextBlock Text="固定的应用"
                                   Grid.Row="1"
                                   Grid.ColumnSpan="2"/>
                        <ScrollViewer Width="320"
                                      Grid.Row="2"
                                      Grid.ColumnSpan="2">
                            <GridView x:Name="ActionsList"
                                       SelectionMode="None"
                                       Loaded="ActionItems_Loaded"
                                      Width="345">
                            </GridView>
                        </ScrollViewer>

                    </Grid>
                </Flyout>
            </FlyoutBase.AttachedFlyout>
        </Rectangle>
    </Grid>
</Window>
